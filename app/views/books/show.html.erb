<h1><%= @book.title %></h1>
<p>Cover: <%= image_tag @book.cover , style: "width: 200px; height: 300px" %></p>
<p>Author: <%= @book.author %></p>
<p>ISBN: <%= @book.isbn %></p>
<p>Status: <%= @book.borrowings.exists?(returned: false) ? "Borrowed" : "Available" %></p>

<% if authenticated? && !@book.borrowings.exists?(returned: false) %>
  <%= button_to "Borrow", borrow_book_path(@book), method: :post %>
<% end %>

<%= link_to "Back to Books", books_path %>
